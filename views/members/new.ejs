    <form action="/members" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="newMemberFirstName">Member's First Name</label>
            <input type="text" name="member[firstName]" placeholder="First Name" class="form-control" id="newMemberFirstName">
        </div>
        <div class="form-group">
            <label for="newMemberLastName">Member's Last Name</label>
            <input type="text" name="member[lastName]" placeholder="Last Name" class="form-control" id="newMemberLastName">
        </div>
        <div class="form-group">
            <label for="newMemberPosition">Member's Position</label>
            <input type="text" name="member[position]" placeholder="Position" class="form-control" id="newMemberPosition">
        </div>
        <div class="form-group">
            <input type="checkbox" name="member[boardMember]" value="true" class="form-check-input" id="isBoardMember">
            <label for="isBoardMember">Board Member?</label>
        </div>
        <div class="form-group">
            <label for="image">Headshot of member</label>
            <input type="file" id="image" name="image" accept="image/*" required>
        </div>
              

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

