<% include ../partials/header %>

    <div class="row">
        <div class="col-12">
            <img id="show-page-photo" class="boardMemberHeadshots" src="<%= member.image %>" alt="">
        </div>
    </div>
    <div class="text-center">
        <h2><%= member.firstName %> <%= member.lastName %></h2>
        <h4><%= member.class %></h4>
        <p><%= member.position %></p>
    </div>
    <div class="row">
        <div class="col-lg-8">
            <h3 class="text-center">
                Bio:
            </h3>
            <p><%= member.bio %></p>
        </div>
    </div>

    <% if(currentAdmin){%>
        <a href="/members/<%= member._id %>/edit"><button>Edit</button></a>
        <form  action="/members/<%= member._id %>?_method=DELETE" method="POST">
            <button>Delete</button>
        </form>
    <% }%>

    

<% include ../partials/footer %>