<% include ../partials/header %>
<link rel="stylesheet" type= 'text/css' href="/stylesheets/socialMedia.css">


    <div class="row">
        <div class="col-12">
            <img id="show-page-photo" class="boardMemberHeadshots" src="<%= member.image %>" alt="">
        </div>
    </div>
    <div class="text-center">
        <h2><%= member.firstName %> <%= member.lastName %></h2>
        <h4><%= member.class %></h4>
        <p><%= member.position %></p>
    </div>
    <div class="row">
        <div class="col-lg-8">
            <h3 class="text-center">
                Bio:
            </h3>
            <p><%= member.bio %></p>
        </div>
        <div class="col-lg-4 outter-SocialMedia">
                <h3 class="text-center">
                        Social Media: 
                </h3>
            <div class="social-media text-center">
                <% if(member.instagram){ %>
                    <a target="_blank" href="<%= member.instagram %>"><i class="fab fa-instagram"></i></a>
                <% } %>

                <% if(member.snapchat){ %>
                    <a target="_blank" href="<%= member.snapchat %>"><i class="fab fa-snapchat-ghost"></i></a>
                <% } %>

                <% if(member.twitter){ %>
                    <a target="_blank" href="<%= member.twitter %>"><i class="fab fa-twitter"></i></a>
                <% } %>

                <% if(member.linkedIn){ %>
                    <a target="_blank" href="<%= member.linkedIn %>"><i class="fab fa-linkedin-in"></i></a>
                <% } %>

                


            </div>
            <% if(!member.instagram && !member.snapchat && !member.twitter && !member.linkedIn){ %>
                <p class="text-center">
                    <%= member.firstName %> has not yet added their social media...
                </p>
            <% } %>
        </div>
    </div>

    <% if(currentAdmin){%>
        <a href="/members/<%= member._id %>/edit"><button>Edit</button></a>
        <form  action="/members/<%= member._id %>?_method=DELETE" method="POST">
            <button>Delete</button>
        </form>        
    <% }%>

    

<% include ../partials/footer %>