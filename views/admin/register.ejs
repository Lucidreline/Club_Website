        <form action="/admin/login" method="POST">
            <div class="form-group">
                <label for="adminUsername">Username</label>
                <input type="text" name="username" placeholder="Username" class="form-control" id="adminUsername">
            </div>
            <div class="form-group">
                <label for="adminPassword">Password</label>
                <input type="password" name="password" placeholder="Password" class="form-control" id="adminPassword">
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>

    </div>
    <div class="col-lg">
        <div id="errArea"></div>
        <form id="adminReg" action="/admin/register" method="POST">
            <div class="form-group">
                <label for="adminRegisterUsername">Username</label>
                <input type="text" name="username" placeholder="Username" class="form-control" id="adminRegisterUsername">
            </div>
            <div class="form-group">
                <label for="adminRegisterPassword">Password</label>
                <input type="password" name="password" placeholder="Password" class="form-control" id="adminRegisterPassword">
            </div>
            <div class="form-group">
                <label for="adminRegisterKey">Admin Key</label>
                <input type="password" name="key" placeholder="Key" class="form-control" id="adminRegisterKey">
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>

    </div>
</div>

<script src="/scripts/adminRegister.js"></script>

