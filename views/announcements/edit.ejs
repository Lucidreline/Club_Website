    <form action="/announcements/<%=announcement._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="editAnnouncementTitle">Announcement Title</label>
          <input type="text" name="announcement[title]" placeholder="Title" class="form-control" id="editAnnouncementTitle" aria-describedby="AnnouncementTitleHelp" value="<%=announcement.title%>">
          <small id="AnnouncementTitleHelp" class="form-text text-muted">Try to keep the title short.</small>

        </div>
        <div class="form-group">
            <label for="editAnnouncementBody">Announcement Body</label>
            <textarea name="announcement[body]" class="form-control" id="editAnnouncementBody" rows="3"><%=announcement.body%></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

